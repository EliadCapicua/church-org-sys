{
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "hooks/*": ["./src/lib/hooks/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", ".next"],
  "extends": "@acme/tsconfig/base.json",
  "include": [".", ".next/types/**/*.ts"]
}
